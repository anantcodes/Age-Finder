<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ffb74d">

    <EditText
        android:id="@+id/etdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:hint="Enter your DOB"
        android:textColor="#000000"
        android:inputType="number"/>


    <TextView
        android:id="@+id/txtShowAge"
        android:layout_below="@+id/etdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:text="Your age show here"
        android:textColor="#000000"
        android:textSize="22sp"/>

    <Button
        android:id="@+id/btnGetAge"
        android:layout_below="@+id/txtShowAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="150dp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent"
        android:onClick="BuClickEvent"
        android:text="Get My Age"/>
    <Button
        android:id="@+id/btnExit"
        android:layout_below="@+id/btnGetAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="150dp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent"
        android:text="Exit App"/>





</RelativeLayout>